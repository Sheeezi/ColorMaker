<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ColorMaker.MainPage" Padding="0">

    <ContentPage.Resources>
        <Color x:Key="Primary">#ab3527</Color>
        <Color x:Key="Secondary">#775752</Color>
        <Color x:Key="Tertiary">#705c2e</Color>
    </ContentPage.Resources>

    <Button BackgroundColor="{StaticResource Secondary}" />

    <Grid x:Name="Container"
          BackgroundColor="#101212">
        <Frame Margin="10, 0, 10, 0"
               VerticalOptions="Center">
            <VerticalStackLayout Spacing="15"
                                 VerticalOptions="Center">
                <Label FontAttributes="Bold"
                       FontSize="Large"
                       HorizontalTextAlignment="Center"
                       Text="Color Maker"
                       TextColor="#0A0A0A" />

                <Label Text="Red value:" />
                <Slider x:Name="slrRed"
                        ThumbColor="{StaticResource Primary}"
                        MaximumTrackColor="{StaticResource Tertiary}"
                        MinimumTrackColor="{StaticResource Secondary}" 
                        ValueChanged="Slider_ValueChanged" />
                
                <Label Text="Green value:" />
                <Slider x:Name="slrGreen"
                        ThumbColor="{StaticResource Primary}"
                        MaximumTrackColor="{StaticResource Tertiary}"
                        MinimumTrackColor="{StaticResource Secondary}"
                        ValueChanged="Slider_ValueChanged" />

                <Label Text="Blue value:" />
                <Slider x:Name="slrBlue"
                        ThumbColor="{StaticResource Primary}"
                        MaximumTrackColor="{StaticResource Tertiary}"
                        MinimumTrackColor="{StaticResource Secondary}"
                        ValueChanged="Slider_ValueChanged" />

                <Frame CornerRadius="25" HorizontalOptions="Center" Padding="8, 5">
                    <HorizontalStackLayout>
                        <Label x:Name="lblHex"
                               HorizontalOptions="End"
                               Text="HEX Value: #000000"
                               VerticalOptions="Center" />

                        <ImageButton Margin="10, 0, 0, 0"
                                     HeightRequest="24"
                                     Source="copy.svg"
                                     VerticalOptions="Center"
                                     WidthRequest="24" 
                                     Clicked="ImageButton_Clicked"/>
                    </HorizontalStackLayout>                    
                </Frame>
                <Button x:Name="btnRandom"
                        BackgroundColor="{StaticResource Primary}"
                        Text="Generate random color" 
                        Clicked="btnRandom_Clicked"/>
                
            </VerticalStackLayout>
        </Frame>
        
    </Grid>

</ContentPage>
